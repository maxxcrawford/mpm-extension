{
    "manifest_version": 2,
    "description": "MPM Extension",
    "name": "MPM",
    "version": "1.0.0",

    "applications": {
      "gecko": {
        "id": "mpm-extension@mozilla.org",
        "strict_min_version": "72"
      }
    },

    "icons": {
      "48": "/icons/page-48.png"
    },

    "browser_action": {
        "default_icon": "/icons/page-32.png",
        "theme_icons": [
          {
              "light": "/icons/page-light-16.png",
              "dark": "/icons/page-16.png",
              "size": 16
          },
          {
              "light": "/icons/page-light-32.png",
              "dark": "/icons/page-32.png",
              "size": 32
          }
        ]
    },

    "permissions": [
        "<all_urls>",
        "browsingData",
        "contextualIdentities",
        "cookies",
        "management",
        "storage",
        "tabs",
        "theme",
        "activeTab",
        "webRequestBlocking",
        "webRequest"
    ],




    "background": {
      "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["*://*.dunkindonuts.com/*", "*://*.facebook.com/*"],
            "js": ["content-script.js"],
            "css": ["content-script.css"],
            "all_frames": true
        }
    ],

    "options_ui": {
      "page": "options.html",
      "browser_style": true
    }
}
